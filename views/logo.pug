doctype html
html(lang='eng')
  head
    title Logo
    link(rel="shortcut icon" href="/images/favicon.png")

    style(type='text/css')
      |  * {
      |    font-family: Helvetica, Arial, sans-serif;
      | }
      | circle {
      |   fill: none;
      |   stroke: tomato;
      |   stroke-width: 7px;
      | }

      | line {
      |   stroke: black;
      |   stroke-width: 5px;
      | }

      | text {
      |   font-size: 60px;
      |   font-family: 'FilmotypedMajor';
      |   text-anchor: middle;
      |   stroke: #000;
      |   stroke-width: 3px;
      |   fill: #f6f7f3;
      | }

      | polygon {
      |   stroke: #000;
      |   stroke-width: 2px;
      |   fill: tomato;
      | }

      | .triangleGroup {
      |   stroke-width: 1px;
      | }

  body
